{
  "ConnectionStrings": {
    "BiflowContext": "Data Source=localhost;Database=Biflow;Integrated Security=sspi;Encrypt=true;TrustServerCertificate=true;"
  },
  "Executor": {
    "Type": "WebApp", // [ WebApp | SelfHosted ]
    "WebApp": {
      "Url": "http://localhost:4321"
    },
    "SelfHosted": {
      "PollingIntervalMs": 5000,
      "MaximumParallelSteps": 10,
      "EmailSettings": {
        "SmtpServer": "smtp-mail.outlook.com",
        "EnableSsl": true,
        "Port": 587,
        "FromAddress": "",
        "AnonymousAuthentication": false,
        "Username": "",
        "Password": ""
      }
    }
  },
  //"Authorization": { // Remove the "Authorization" section if no authorization should be applied.
  //  "Windows": {
  //    "AllowedUsers": [ "LAPTOP-A4BTULFB\\Tommi Hirvonen" ]
  //  }
  //},
  "Kestrel": {
    "Endpoints": {
      "Http": { "Url": "http://localhost:5432" }
      // "Https": { "Url": "https://localhost:5433" } // Requires trusted certificate (dev or otherwise)
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Program Files\\Biflow\\BiflowScheduler\\log\\scheduler.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level:w3}] {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
