@namespace Biflow.Ui.Components

<div @attributes="InputAttributes" class="form-check @CssClass @(Inline ? "form-check-inline" : null)">
    <input type="radio" class="form-check-input @InputCssClass" id="@id"
           disabled=@Disabled
           checked=@Checked 
           @onchange="OnEnabled">
    <label class="form-check-label @LabelCssClass" for="@id">
        @ChildContent
    </label>
</div>

@code {
    [Parameter(CaptureUnmatchedValues = true)] public Dictionary<string, object>? InputAttributes { get; set; }

    [Parameter] public Guid Id { get; set; }

    [Parameter] public bool Checked { get; set; }

    [Parameter] public EventCallback OnEnabled { get; set; }

    [Parameter] public bool Disabled { get; set; }

    [Parameter] public bool Inline { get; set; }

    [Parameter] public string? CssClass { get; set; }

    [Parameter] public string? InputCssClass { get; set; }

    [Parameter] public string? LabelCssClass { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }

    private Guid id = Guid.NewGuid();

    protected override void OnParametersSet()
    {
        if (Id != Guid.Empty && Id != id)
        {
            id = Id;
        }
    }
}