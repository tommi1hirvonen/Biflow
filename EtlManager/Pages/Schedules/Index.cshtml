@page
@model EtlManager.Pages.Schedules.IndexModel
@using Microsoft.AspNetCore.Hosting
@using System.Collections.Generic 
@inject IWebHostEnvironment WebHostEnvironment
@{
    ViewData["Title"] = "Schedules";
}

<h4>Schedules</h4>

@if (Model.IsOperator)
{
    <button type="button" class="btn btn-success mt-2" data-toggle="modal" data-target="#modal_create">
        Add schedule
    </button>
    <button type="button" class="btn btn-primary mt-2 ml-5" data-toggle="modal" data-target="#modal_generate">
        Generate schedules
    </button>
}

<div class="card shadow-sm pt-2 mt-4">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Job</th>
                <th>Enabled</th>
                <th>Time</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model.Jobs.OrderBy(job => job.JobName))
            {
                @foreach (var schedule in job.Schedules.OrderBy(s => s.TimeHours).ThenBy(s => s.TimeMinutes))
                {
                    <tr>
                        <td>
                            <a class="text-dark" asp-page="../Jobs/JobDetails/Schedules" asp-route-id="@job.JobId">@job.JobName</a>
                        </td>
                        <td class="align-middle">
                            <form>
                                <div class="custom-control custom-switch">
                                    @if (Model.IsOperator)
                                    {
                                        <input type="checkbox" class="custom-control-input" id="@schedule.ScheduleId" asp-for="@schedule.IsEnabled" onchange="toggleEnabled(this)" data-schedule-id="@schedule.ScheduleId">
                                    }
                                    else
                                    {
                                        <input type="checkbox" class="custom-control-input" disabled asp-for="@schedule.IsEnabled">
                                    }

                                    <label class="custom-control-label" style="cursor: pointer;" for="@schedule.ScheduleId"></label>
                                </div>
                            </form>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => schedule.TimeHours):@schedule.GetMinutesText()
                        </td>
                        <td>
                            @if (schedule.Monday)
                            {
                                <span class="badge badge-primary">Monday</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Monday</span>
                            }
                        </td>
                        <td>
                            @if (schedule.Tuesday)
                            {
                                <span class="badge badge-primary">Tuesday</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Tuesday</span>
                            }
                        </td>
                        <td>
                            @if (schedule.Wednesday)
                            {
                                <span class="badge badge-primary">Wednesday</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Wednesday</span>
                            }
                        </td>
                        <td>
                            @if (schedule.Thursday)
                            {
                                <span class="badge badge-primary">Thursday</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Thursday</span>
                            }
                        </td>
                        <td>
                            @if (schedule.Friday)
                            {
                                <span class="badge badge-primary">Friday</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Friday</span>
                            }
                        </td>
                        <td>
                            @if (schedule.Saturday)
                            {
                                <span class="badge badge-primary">Saturday</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Saturday</span>
                            }
                        </td>
                        <td>
                            @if (schedule.Sunday)
                            {
                                <span class="badge badge-primary">Sunday</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Sunday</span>
                            }
                        </td>
                        <td align="center">
                            @if (Model.IsOperator)
                            {
                                <button type="button" class="btn btn-light btn-sm" onclick="deleteSchedule(this, '@schedule.ScheduleId')">
                                    @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/delete.svg")))
                                </button>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.IsOperator)
{
    <div class="modal fade" id="modal_create" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New schedule</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-8 mx-auto">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group col">
                                    <label>Job</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/loader.svg")))
                                            </div>
                                        </div>
                                        <select asp-for="NewSchedule.JobId" class="form-control">
                                            @foreach (var job in Model.Jobs)
                                            {
                                                <option value="@job.JobId">@job.JobName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <input hidden asp-for="NewSchedule.IsEnabled" />
                                    <label asp-for="NewSchedule.TimeHours" class="control-label"></label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/clock.svg")))
                                            </div>
                                        </div>
                                        <input asp-for="NewSchedule.TimeHours" class="form-control" />
                                    </div>
                                    <span asp-validation-for="NewSchedule.TimeHours" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="timeMinutes0" asp-for="NewSchedule.TimeMinutes" value="0">
                                        <label class="custom-control-label" for="timeMinutes0">:00</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="timeMinutes15" asp-for="NewSchedule.TimeMinutes" value="15">
                                        <label class="custom-control-label" for="timeMinutes15">:15</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="timeMinutes30" asp-for="NewSchedule.TimeMinutes" value="30">
                                        <label class="custom-control-label" for="timeMinutes30">:30</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" class="custom-control-input" id="timeMinutes45" asp-for="NewSchedule.TimeMinutes" value="45">
                                        <label class="custom-control-label" for="timeMinutes45">:45</label>
                                    </div>
                                </div>

                                <div id="weekdays" class="form-group">
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="NewSchedule.Monday">
                                        <label class="custom-control-label" asp-for="NewSchedule.Monday">@Html.DisplayNameFor(model => model.NewSchedule.Monday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="NewSchedule.Tuesday">
                                        <label class="custom-control-label" asp-for="NewSchedule.Tuesday">@Html.DisplayNameFor(model => model.NewSchedule.Tuesday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="NewSchedule.Wednesday">
                                        <label class="custom-control-label" asp-for="NewSchedule.Wednesday">@Html.DisplayNameFor(model => model.NewSchedule.Wednesday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="NewSchedule.Thursday">
                                        <label class="custom-control-label" asp-for="NewSchedule.Thursday">@Html.DisplayNameFor(model => model.NewSchedule.Thursday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="NewSchedule.Friday">
                                        <label class="custom-control-label" asp-for="NewSchedule.Friday">@Html.DisplayNameFor(model => model.NewSchedule.Friday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="NewSchedule.Saturday">
                                        <label class="custom-control-label" asp-for="NewSchedule.Saturday">@Html.DisplayNameFor(model => model.NewSchedule.Saturday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="NewSchedule.Sunday">
                                        <label class="custom-control-label" asp-for="NewSchedule.Sunday">@Html.DisplayNameFor(model => model.NewSchedule.Sunday)</label>
                                    </div>
                                </div>
                                <text id="weekdaysError" class="text-danger" style="display: none;">Select at least one weekday</text>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="button_submit" asp-page-handler="Create" class="btn btn-success">Create</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    <div class="modal fade" id="modal_generate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Generate schedules</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-8 mx-auto">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group col">
                                    <label>Job</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/loader.svg")))
                                            </div>
                                        </div>
                                        <select asp-for="ScheduleGeneration.JobId" class="form-control">
                                            @foreach (var job in Model.Jobs)
                                            {
                                                <option value="@job.JobId">@job.JobName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col">
                                        <label asp-for="ScheduleGeneration.IntervalType" class="control-label"></label>
                                        <select id="interval_type_select" asp-for="ScheduleGeneration.IntervalType" class="form-control" onchange="intervalTypeSelected()">
                                            <option>Hours</option>
                                            <option>Minutes</option>
                                        </select>
                                        <span asp-validation-for="ScheduleGeneration.IntervalType" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col input-hours">
                                        <label asp-for="ScheduleGeneration.IntervalValueHours" class="control-label"></label>
                                        <select asp-for="ScheduleGeneration.IntervalValueHours" class="form-control">
                                            @for (int value = 1; value <= 12; value++)
                                            {
                                                <option>@value</option>
                                            }
                                        </select>
                                        <span asp-validation-for="ScheduleGeneration.IntervalValueHours" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col input-minutes" style="display: none;">
                                        <label asp-for="ScheduleGeneration.IntervalValueMinutes" class="control-label"></label>
                                        <select asp-for="ScheduleGeneration.IntervalValueMinutes" class="form-control">
                                            <option>15</option>
                                            <option>30</option>
                                            <option>45</option>
                                        </select>
                                        <span asp-validation-for="ScheduleGeneration.IntervalValueMinutes" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col">
                                        <label asp-for="ScheduleGeneration.StartTime" class="control-label"></label>
                                        <select asp-for="ScheduleGeneration.StartTime" class="form-control">
                                            @foreach (var value in GetTimeValues())
                                            {
                                                <option>@value</option>
                                            }
                                        </select>
                                        <span asp-validation-for="ScheduleGeneration.StartTime" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col">
                                        <label asp-for="ScheduleGeneration.EndTime" class="control-label"></label>
                                        <select asp-for="ScheduleGeneration.EndTime" class="form-control">
                                            @foreach (var value in GetTimeValues())
                                            {
                                                <option>@value</option>
                                            }
                                        </select>
                                        <span asp-validation-for="ScheduleGeneration.EndTime" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div id="weekdays" class="form-group">
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="ScheduleGeneration.Monday">
                                        <label class="custom-control-label" asp-for="ScheduleGeneration.Monday">@Html.DisplayNameFor(model => model.ScheduleGeneration.Monday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="ScheduleGeneration.Tuesday">
                                        <label class="custom-control-label" asp-for="ScheduleGeneration.Tuesday">@Html.DisplayNameFor(model => model.ScheduleGeneration.Tuesday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="ScheduleGeneration.Wednesday">
                                        <label class="custom-control-label" asp-for="ScheduleGeneration.Wednesday">@Html.DisplayNameFor(model => model.ScheduleGeneration.Wednesday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="ScheduleGeneration.Thursday">
                                        <label class="custom-control-label" asp-for="ScheduleGeneration.Thursday">@Html.DisplayNameFor(model => model.ScheduleGeneration.Thursday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="ScheduleGeneration.Friday">
                                        <label class="custom-control-label" asp-for="ScheduleGeneration.Friday">@Html.DisplayNameFor(model => model.ScheduleGeneration.Friday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="ScheduleGeneration.Saturday">
                                        <label class="custom-control-label" asp-for="ScheduleGeneration.Saturday">@Html.DisplayNameFor(model => model.ScheduleGeneration.Saturday)</label>
                                    </div>
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input type="checkbox" class="custom-control-input" asp-for="ScheduleGeneration.Sunday">
                                        <label class="custom-control-label" asp-for="ScheduleGeneration.Sunday">@Html.DisplayNameFor(model => model.ScheduleGeneration.Sunday)</label>
                                    </div>
                                </div>
                                <text id="weekdaysError" class="text-danger" style="display: none;">Select at least one weekday</text>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="button_submit" class="btn btn-success" asp-page-handler="Generate">Generate</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(function () {
            $("#button_submit").click(function () {
                var checked_checkboxes = $("#weekdays input[type=checkbox]:checked");
                if (checked_checkboxes.length == 0) {
                    $("#weekdaysError").show();
                    return false;
                }
                return true;
            });
        });

        $(function () {
            $("#weekdays input[type=checkbox]").change(function () {
                $("#weekdaysError").hide();
            });
        });

        function intervalTypeSelected() {
            var intervalType = document.getElementById('interval_type_select').value;
            if (intervalType == "Hours") {
                $('.input-minutes').hide();
                $('.input-hours').show();
            } else if (intervalType == "Minutes") {
                $('.input-minutes').show();
                $('.input-hours').hide();
            }
        }

        function deleteSchedule(element, id) {
            $.ajax({
                url: "./Schedules/Index?handler=Delete",
                method: "POST",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                data: {
                    id: id
                },
                success: function (response) {
                    if (response.success) {
                        $(element).closest('tr').remove();
                    } else {
                        alert(response.responseText);
                    }
                },
                error: function (response) {
                    alert("AJAX error, try logging in again");
                }
            });
        }

        function toggleEnabled(elem) {
            var id_ = $(elem).data('schedule-id');
            //alert(id);

            $.ajax({
                url: "/Schedules/Index?handler=ToggleEnabled",
                method: "POST",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                data: {
                    id: id_
                },
                success: function (response) {
                    if (!response.success) {
                        alert(response.responseText);
                    }
                },
                error: function (response) {
                    alert("AJAX error, try logging in again");
                }
            });
        }
    </script>
}

@functions {
    public List<string> GetTimeValues()
    {
        List<string> timeValues = new List<string>();
        for (int hours = 0; hours < 24; hours++)
        {
            for (int minutes = 0; minutes < 60; minutes += 15)
            {
                string hourString = hours.ToString().Length > 1 ? hours.ToString() : "0" + hours;
                string minuteString = minutes.ToString().Length > 1 ? minutes.ToString() : "0" + minutes;
                timeValues.Add(hourString + ":" + minuteString);
            }
        }
        return timeValues;
    }
}