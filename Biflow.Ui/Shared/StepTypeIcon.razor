@using ST = Biflow.Core.Entities.StepType

@switch (StepType)
{
    case ST.Sql:
        <SvgIcon Icon="FeatherIcon.Code" />
        break;
    case ST.Package:
        <SvgIcon Icon="FeatherIcon.Package" />
        break;
    case ST.Pipeline:
        <SvgIcon Icon="FeatherIcon.Pipeline" />
        break;
    case ST.Job:
        <SvgIcon Icon="LucideIcon.ClipboardList" />
        break;
    case ST.Exe:
        <SvgIcon Icon="FeatherIcon.Terminal" />
        break;
    case ST.Dataset:
        <SvgIcon Icon="LucideIcon.FileBarChart2" />
        break;
    case ST.Function:
        <SvgIcon Icon="FeatherIcon.Zap" />
        break;
    case ST.AgentJob:
        <SvgIcon Icon="FeatherIcon.Server" />
        break;
    case ST.Tabular:
        <SvgIcon Icon="FeatherIcon.Box" />
        break;
    case ST.Email:
        <SvgIcon Icon="FeatherIcon.Mail" />
        break;
    case ST.Qlik:
        <SvgIcon Icon="LucideIcon.FilePieChart" />
        break;
    case ST.Databricks:
        <SvgIcon Icon="FeatherIcon.Layers" />
        break;
    case ST.Dbt:
        <SvgIcon Icon="LucideIcon.Blocks" />
        break;
    default:
        <SvgIcon Icon="FeatherIcon.XCircle" />
        break;
}

@code {
    [Parameter]
    public StepType? StepType { get; set; }
}
