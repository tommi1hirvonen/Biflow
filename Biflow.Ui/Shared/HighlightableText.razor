@using System.Text.RegularExpressions

@if (!string.IsNullOrEmpty(PartToHighlight) && (Text?.ContainsIgnoreCase(PartToHighlight) ?? false))
{
    @((MarkupString)Regex.Replace(Text, Regex.Escape(PartToHighlight), m => $"<mark>{m.Groups[0].Value}</mark>", RegexOptions.IgnoreCase))
}
else
{
    @Text
}

@code {
    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public string? PartToHighlight { get; set; }
}
