@using Biflow.Ui.Icons

<SvgIcon Icon="Icon" />

@code {
    [Parameter] public SqlConnectionType ConnectionType { get; set; }

    private Svg Icon => ConnectionType switch
    {
        SqlConnectionType.Sql => LucideIcon.Database,
        SqlConnectionType.Snowflake => LucideIcon.Snowflake,
        _ => LucideIcon.CircleHelp
    };
}
