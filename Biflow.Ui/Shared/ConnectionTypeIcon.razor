@using Biflow.Ui.Icons

<SvgIcon Icon="Icon" />

@code {
    [Parameter] public ConnectionType ConnectionType { get; set; }

    private Svg Icon => ConnectionType switch
    {
        ConnectionType.Sql => LucideIcon.Database,
        ConnectionType.AnalysisServices => LucideIcon.Box,
        ConnectionType.Snowflake => LucideIcon.Snowflake,
        _ => LucideIcon.CircleHelp
    };
}
