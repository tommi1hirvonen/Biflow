@using Biflow.Ui.Icons

<SvgIcon Icon="Icon" />

@code {
    [Parameter] public string? Filename { get; set; }

    private Svg Icon => Filename switch
    {
        { } json when json.EndsWith(".json") => LucideIcon.FileJson,
        { } xml when xml.EndsWith(".xml") => LucideIcon.FileCode,
        { } xls when xls.EndsWith(".xlsx") || xls.EndsWith(".xls") || xls.EndsWith(".xlsm") || xls.EndsWith(".csv") => LucideIcon.FileSpreadsheet,
        { } txt when txt.EndsWith(".txt") => LucideIcon.FileText,
        _ => LucideIcon.File
    };
}
