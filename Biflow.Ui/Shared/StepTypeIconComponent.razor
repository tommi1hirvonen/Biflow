
@switch (StepType_)
{
    case StepType.Sql:
        <CxIcon Icon="FeatherIcon.Code" />
        break;
    case StepType.Package:
        <CxIcon Icon="FeatherIcon.Package" />
        break;
    case StepType.Pipeline:
        <CxIcon Icon="FeatherIcon.Pipeline" />
        break;
    case StepType.Job:
        <CxIcon Icon="FeatherIcon.Loader" />
        break;
    case StepType.Exe:
        <CxIcon Icon="FeatherIcon.Terminal" />
        break;
    case StepType.Dataset:
        <CxIcon Icon="FeatherIcon.BarChart2" />
        break;
    case StepType.Function:
        <CxIcon Icon="FeatherIcon.Zap" />
        break;
    case StepType.AgentJob:
        <CxIcon Icon="FeatherIcon.Server" />
        break;
    case StepType.Tabular:
        <CxIcon Icon="FeatherIcon.Box" />
        break;
    case StepType.Email:
        <CxIcon Icon="FeatherIcon.Mail" />
        break;
    default:
        <CxIcon Icon="FeatherIcon.XCircle" />
        break;
}

@code {
    [Parameter]
    public StepType? StepType_ { get; set; }
}
