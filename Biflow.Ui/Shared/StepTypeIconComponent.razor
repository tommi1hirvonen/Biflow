
@switch (StepType)
{
    case DataAccess.Models.StepType.Sql:
        <CxIcon Icon="FeatherIcon.Code" />
        break;
    case DataAccess.Models.StepType.Package:
        <CxIcon Icon="FeatherIcon.Package" />
        break;
    case DataAccess.Models.StepType.Pipeline:
        <CxIcon Icon="FeatherIcon.Pipeline" />
        break;
    case DataAccess.Models.StepType.Job:
        <CxIcon Icon="LucideIcon.ClipboardList" />
        break;
    case DataAccess.Models.StepType.Exe:
        <CxIcon Icon="FeatherIcon.Terminal" />
        break;
    case DataAccess.Models.StepType.Dataset:
        <CxIcon Icon="LucideIcon.FileBarChart2" />
        break;
    case DataAccess.Models.StepType.Function:
        <CxIcon Icon="FeatherIcon.Zap" />
        break;
    case DataAccess.Models.StepType.AgentJob:
        <CxIcon Icon="FeatherIcon.Server" />
        break;
    case DataAccess.Models.StepType.Tabular:
        <CxIcon Icon="FeatherIcon.Box" />
        break;
    case DataAccess.Models.StepType.Email:
        <CxIcon Icon="FeatherIcon.Mail" />
        break;
    case DataAccess.Models.StepType.Qlik:
        <CxIcon Icon="LucideIcon.FilePieChart" />
        break;
    default:
        <CxIcon Icon="FeatherIcon.XCircle" />
        break;
}

@code {
    [Parameter]
    public StepType? StepType { get; set; }
}
