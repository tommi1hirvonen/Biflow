@inherits StepEditModal<DatasetStep>

<StepEditModalTemplate Modal="this" TStep="DatasetStep">
    @if (Step is not null)
    {
        <div class="row mt-3">
            <div class="col-md-4 d-md-flex align-items-center justify-content-end">
                <label class="form-label mb-lg-0">Azure credential</label>
            </div>
            <div class="col-md-6 d-inline">
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <SvgIcon Icon="LucideIcon.Globe" />
                    </div>
                    <InputSelect class="form-select form-select-sm" @bind-Value="Step.AzureCredentialId">
                        @foreach (var app in AzureCredentials)
                        {
                            <option value="@app.AzureCredentialId">@app.AzureCredentialName</option>
                        }
                    </InputSelect>
                    <HxButton Size="ButtonSize.Small" Color="ThemeColor.None" CssClass="btn-auto" @onclick="OpenDatasetSelectOffcanvas">
                        <SvgIcon Icon="LucideIcon.Ellipsis" />
                        Browse datasets
                    </HxButton>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4 d-md-flex justify-content-end">
                <label class="form-label mb-lg-0">Workspace id</label>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <SvgIcon Icon="LucideIcon.Folder" />
                    </div>
                    <InputText class="form-control form-control-sm" @bind-Value="Step.WorkspaceId"
                               @bind-Value:after="() => _datasetGroupName = string.Empty"></InputText>
                </div>
                <div class="form-text">
                    @if (_datasetGroupName is null)
                    {
                        <HxSpinner Color="ThemeColor.Secondary" Size="SpinnerSize.Small" />
                        <span>Loading workspace name...</span>
                    }
                    else
                    {
                        <span>@_datasetGroupName</span>
                    }
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4 d-md-flex justify-content-end">
                <label class="form-label mb-lg-0">Dataset id</label>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <SvgIcon Icon="LucideIcon.FileBarChart2" />
                    </div>
                    <InputText class="form-control form-control-sm" @bind-Value="Step.DatasetId"
                               @bind-Value:after="() => _datasetName = string.Empty"></InputText>
                </div>
                <div class="form-text">
                    @if (_datasetName is null)
                    {
                        <HxSpinner Color="ThemeColor.Secondary" Size="SpinnerSize.Small" />
                        <span>Loading dataset name...</span>
                    }
                    else
                    {
                        <span>@_datasetName</span>
                    }
                </div>
            </div>
        </div>

        <DatasetSelectOffcanvas @ref="_datasetSelectOffcanvas" OnDatasetSelected="OnDatasetSelected" />
    }
</StepEditModalTemplate>