@inherits StepEditModal<EmailStep>

<StepEditModalTemplate Modal="this" TStep="EmailStep">
    @if (Step is not null)
    {
        <div class="row">
            <div class="col">
                <label class="form-label">Recipients</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <CxIcon Icon="FeatherIcon.Users" />
                    </div>
                    <InputText class="form-control form-control-sm" @bind-Value="Step.Recipients" @oninput="ResetStepError" />
                </div>
                <div class="form-text">Comma separated list of recipient email addresses. Step parameters can be used to dynamically set the value of recipients, subject and body properties.</div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col">
                <label class="form-label">Subject</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <CxIcon Icon="FeatherIcon.Type" />
                    </div>
                    <InputText class="form-control form-control-sm" @bind-Value="Step.Subject" @oninput="ResetStepError" />
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col">
                <label class="form-label">Body</label>
                <InputTextArea class="form-control form-control-sm" @bind-Value="Step.Body" rows="3" @oninput="ResetStepError"></InputTextArea>
            </div>
        </div>
        <StepParameterEditComponent Step="Step" NewParameterDelegate="() => new() { Step = Step }" />
    }
</StepEditModalTemplate>