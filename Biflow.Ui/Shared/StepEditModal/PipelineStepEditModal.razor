@inherits StepEditModal<PipelineStep>

<StepEditModalTemplate Modal="this" TStep="PipelineStep">
    @if (Step is not null)
    {
        <div class="row gap-3">
            <div class="col-auto">
                <label class="form-label">Timeout (min) (0 = indefinite)</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <CxIcon Icon="FeatherIcon.XOctagon" />
                    </div>
                    <InputNumber class="form-control form-control-sm" @bind-Value="Step.TimeoutMinutes" style="max-width: 10rem;"></InputNumber>
                </div>
            </div>
            <div class="col-auto">
                <label class="form-label">Pipeline client</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <CxIcon Icon="LucideIcon.Factory" />
                    </div>
                    <InputSelect class="form-select form-select-sm" @bind-Value="Step.PipelineClientId">
                        @foreach (var client in PipelineClients ?? Enumerable.Empty<PipelineClient>())
                        {
                            <option value="@client.PipelineClientId">@client.PipelineClientName</option>
                        }
                    </InputSelect>
                </div>
            </div>
        </div>
        <div class="row mt-2 gap-2 align-items-end">
            <div class="col">
                <label class="form-label">Pipeline name</label>
                <div class="input-group input-group-sm">
                    <div class="input-group-text">
                        <CxIcon Icon="FeatherIcon.Pipeline" />
                    </div>
                    <InputText class="form-control form-control-sm" @bind-Value="Step.PipelineName"></InputText>
                </div>
            </div>
            <div class="col-md-auto">
                <HxButtonGroup Size="ButtonGroupSize.Small">
                    <HxButton Size="ButtonSize.Small" Color="ThemeColor.None" CssClass="btn-auto" @onclick="OpenPipelineSelectOffcanvas">
                        <CxIcon Icon="FeatherIcon.MoreHorizontal" />
                        Browse pipelines
                    </HxButton>
                </HxButtonGroup>
            </div>
        </div>
        <PipelineSelectOffcanvas @ref="pipelineSelectOffcanvas" OnPipelineSelected="OnPipelineSelected" />
        <StepParameterEditComponent Step="Step" NewParameterDelegate="() => new() { Step = Step }" OnImportParameters="ImportParametersAsync" />
    }
</StepEditModalTemplate>