{
  "EnvironmentName": "Production",
  "ConnectionStrings": {
    "BiflowContext": "Data Source=localhost;Database=Biflow;Integrated Security=sspi;Encrypt=true;TrustServerCertificate=true;"
  },
  "Executor": {
    "Type": "ConsoleApp", // [WebApp | ConsoleApp | SelfHosted]
    "WebApp": {
      "Url": "http://localhost:4321"
    },
    "ConsoleApp": {
      "BiflowExecutorPath": "C:\\Program Files\\Biflow\\BiflowExecutor\\BiflowExecutor.exe"
    },
    "SelfHosted": {
      "PollingIntervalMs": 5000,
      "MaximumParallelSteps": 10,
      "SensitiveDataLogging": false,
      "EmailSettings": {
        "SmtpServer": "smtp-mail.outlook.com",
        "EnableSsl": true,
        "Port": 587,
        "FromAddress": "",
        "AnonymousAuthentication": false,
        "Username": "",
        "Password": ""
      }
    }
  },
  "Scheduler": {
    "Type": "WebApp", // [WebApp | SelfHosted]
    "WebApp": {
      "Url": "http://localhost:5432"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": { "Url": "http://localhost:80" }
      // "Https": { "Url": "https://localhost:443" } // Requires trusted certificate (dev or otherwise)
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Program Files\\Biflow\\BiflowUi\\log\\ui.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level:w3}] {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
