@page "/account"

@inject MarkupHelperService MarkupHelper
@inject IHttpContextAccessor HttpContextAccessor
@inject IDbContextFactory<BiflowContext> DbFactory
@inject DbHelperService DbHelperService
@inject IHxMessengerService Messenger
@inject AuthenticationMethodResolver AuthenticationResolver

<PageTitle>Account | Biflow</PageTitle>

<h4>Account</h4>
<p></p>
<h5>
    @MarkupHelper.FromFile("icons/feather/user.svg")
    @Username
</h5>

<div class="row mt-3">
    <div class="col-lg-6">
        <div class="card shadow-sm">
            <h6 class="card-header">
                @MarkupHelper.FromFile("icons/feather/at-sign.svg")
                Email
            </h6>
            <div class="card-body">
                @if (User is null)
                {
                    <div class="row">
                        <div class="col text-center">
                            <HxSpinner Color="ThemeColor.Secondary" />
                        </div>
                    </div>
                }
                else
                {
                    <EditForm class="mt-3" Model="User" OnValidSubmit="SubmitEmail">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div>
                            <div class="input-group">
                                <div class="input-group-text">
                                    @MarkupHelper.FromFile("icons/feather/at-sign.svg")
                                </div>
                                <InputText class="form-control" type="email" @bind-Value="User.Email" placeholder="Email"></InputText>
                            </div>
                        </div>
                        <div>
                            <HxSubmit Color="ThemeColor.Success">
                                @MarkupHelper.FromFile("icons/feather/save.svg")
                                Save
                            </HxSubmit>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    </div>
    @if (AuthenticationResolver.AuthenticationMethod == AuthenticationMethod.BuiltIn)
    {
        <div class="col-lg-6 mt-4 mt-lg-0">
            <div class="card shadow-sm">
                <h6 class="card-header">
                    @MarkupHelper.FromFile("icons/feather/key.svg")
                    Password
                </h6>
                <div class="card-body">
                    @if (User is null)
                    {
                        <div class="row">
                            <div class="col text-center">
                                <HxSpinner Color="ThemeColor.Secondary" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="PasswordModel_" OnValidSubmit="UpdatePassword">
                            <div>
                                <label class="form-label">New password</label>
                                <div class="input-group">
                                    <div class="input-group-text">
                                        @MarkupHelper.FromFile("icons/feather/lock.svg")
                                    </div>
                                    <InputText class="form-control" type="password" @bind-Value="PasswordModel_.Password"></InputText>
                                </div>
                            </div>
                            <div>
                                <label class="form-label">Confirm new password</label>
                                <div class="input-group">
                                    <div class="input-group-text rounded-left">
                                        @MarkupHelper.FromFile("icons/feather/key.svg")
                                    </div>
                                    <InputText class="form-control" type="password" @bind-Value="PasswordModel_.ConfirmPassword"></InputText>
                                </div>
                            </div>
                            <div>
                                <HxSubmit Color="ThemeColor.Success">
                                    @MarkupHelper.FromFile("icons/feather/save.svg")
                                    Save
                                </HxSubmit>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    }
</div>


@code {
    private string? Username => HttpContextAccessor.HttpContext?.User?.Identity?.Name;

    private User User { get; set; } = null!;

    private PasswordModel PasswordModel_ { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        using var context = await Task.Run<BiflowContext>(DbFactory.CreateDbContext);
        User = await context.Users
            .AsNoTrackingWithIdentityResolution()
            .Include(user => user.Subscriptions)
            .FirstAsync(user => user.Username == Username);
    }

    private async Task SubmitEmail()
    {
        try
        {
            using var context = DbFactory.CreateDbContext();
            context.Attach(User).State = EntityState.Modified;
            await context.SaveChangesAsync();
            Messenger.AddInformation("Email updated successfully");
        }
        catch (Exception ex)
        {
            Messenger.AddError("Error saving email", ex.Message);
        }
    }

    private async Task UpdatePassword()
    {
        if (Username is null)
        {
            Messenger.AddError("Error", "Error getting username from HttpContext");
            return;
        }

        PasswordModel_.Password = PasswordModel_.Password ?? string.Empty;
        PasswordModel_.ConfirmPassword = PasswordModel_.ConfirmPassword ?? string.Empty;

        if (PasswordModel_.Password.Length < 1 || PasswordModel_.Password.Length > 250)
        {
            Messenger.AddWarning("Warning", "The password length must be between 1 and 250");
            return;
        }

        if (!PasswordModel_.Password.Equals(PasswordModel_.ConfirmPassword))
        {
            Messenger.AddWarning("Warning", "The two passwords do not match");
            return;
        }

        var result = await DbHelperService.UpdatePasswordAsync(Username, PasswordModel_.Password);
        if (result)
        {
            Messenger.AddInformation("Success", "Password updated successfully");
            PasswordModel_.Password = null;
            PasswordModel_.ConfirmPassword = null;
        }
        else
        {
            Messenger.AddError("Error", "Error updating password");
        }
    }

    private class PasswordModel
    {
        public string? Password { get; set; }

        public string? ConfirmPassword { get; set; }
    }
}
