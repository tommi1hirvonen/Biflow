@page
@model Biflow.Ui.Pages.LogInModel
@using Biflow.Ui
@using Biflow.Ui.Core
@using Biflow.Ui.Components

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row">
        <div class="col-sm-10 col-md-7 col-xl-5 mx-auto pt-5">
            <section>

                <div class="card shadow">
                    <h5 class="card-header">Log in</h5>
                    <div class="card-body">

                        <form method="post" role="form" class="form-horizontal" onsubmit="disableLoginbutton()">
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <p />
                            <p />
                            <div>
                                <label class="visually-hidden" asp-for="Login.Username"></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <component type="typeof(CxIcon)" render-mode="ServerPrerendered" param-Icon="FeatherIcon.User" />
                                    </span>
                                    <input id="username" asp-for="Login.Username" class="form-control" placeholder="Username" />
                                </div>
                                @Html.ValidationMessageFor(m => m.Login.Username, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group mt-4">
                                <label class="visually-hidden" asp-for="Login.Password"></label>
                                <div class="input-group">
                                    <div class="input-group-text">
                                        <component type="typeof(CxIcon)" render-mode="ServerPrerendered" param-Icon="FeatherIcon.Key" />
                                    </div>
                                    <input type="password" asp-for="Login.Password" class="form-control" placeholder="Password" />
                                </div>
                                @Html.ValidationMessageFor(m => m.Login.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="d-grid mt-4 mb-3">
                                <button id="button_login" asp-page-handler="LogIn" class="btn btn-primary">
                                    <component type="typeof(CxIcon)" render-mode="ServerPrerendered" param-Icon="FeatherIcon.LogIn" />
                                    &nbsp;
                                    Log in
                                </button>
                            </div>
                        </form>

                    </div>
                </div>

            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        window.onload = focusUsername;

        function focusUsername() {
            document.getElementById('username').focus();
        }

        function disableLoginbutton() {
            document.getElementById('button_login').setAttribute('disabled', 'true');
            return true;
        }
    </script>
}