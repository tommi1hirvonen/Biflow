@inject ToasterService Toaster
@inject IDbContextFactory<AppDbContext> DbContextFactory
@inject DatasetClientFactory ClientFactory

<HxOffcanvas @ref="_offcanvas" Size="OffcanvasSize.Regular" Title="Select dataset">
    <BodyTemplate>
        @if (AllowWorkspaceChange)
        {
            <div class="row mb-3 align-items-end">
                <div class="col">
                    <label class="form-label">Fabric workspace</label>
                    <div class="input-group input-group-sm">
                        <div class="input-group-text">
                            <SvgIcon Icon="LucideIcon.Globe" />
                        </div>
                        <select class="form-select form-select-sm" @bind="_fabricWorkspaceId">
                            @foreach (var fabricWorkspace in FabricWorkspaces ?? [])
                            {
                                <option value="@fabricWorkspace.FabricWorkspaceId">@fabricWorkspace.FabricWorkspaceName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-auto">
                    <HxButton Color="ThemeColor.Primary" Size="ButtonSize.Small" OnClick="LoadAsync">
                        <SvgIcon Icon="LucideIcon.RefreshCw" />
                        Refresh
                    </HxButton>
                </div>
            </div>
        }
        <div class="row">
            <div class="col">
                <div class="input-group">
                    <div class="input-group-text">
                        <SvgIcon Icon="LucideIcon.Search" />
                    </div>
                    <input type="search" class="form-control form-control-sm" placeholder="Search datasets" @bind-value="_filterText" @bind-value:event="oninput" />
                </div>
            </div>
        </div>
        @{
            var style = AllowWorkspaceChange
                ? "height: calc(100vh - 290px); overflow-y: scroll;"
                : "height: calc(100vh - 210px); overflow-y: scroll;";
        }
        <div class="row mt-3" style="@style">
            <div class="col">
                <div class="list-group">
                    @if (_datasets is null)
                    {
                        <div class="list-group-item text-center">
                            <HxSpinner Color="ThemeColor.Secondary" Size="SpinnerSize.Small" />
                        </div>
                    }
                    else if (!_datasets.Any())
                    {
                        <div class="list-group-item small">
                            No datasets
                        </div>
                    }
                    else
                    {
                        var datasets = _datasets
                            .Where(d => string.IsNullOrEmpty(_filterText) || d.DatasetName.ContainsIgnoreCase(_filterText))
                            .OrderBy(d => d.DatasetName)
                            .ToArray();
                        
                        foreach (var dataset in datasets)
                        {
                            <div class="list-group-item list-group-item-action cursor-pointer @(dataset == _selectedDataset ? "fw-bold bg-body" : null)" @onclick="() => _selectedDataset = dataset">
                                <div class="row">
                                    <div class="col d-flex align-items-center small">
                                        <SvgIcon Icon="LucideIcon.FileBarChart2" />
                                        &nbsp;
                                        <HighlightableText Text="@dataset.DatasetName" PartToHighlight="@_filterText" />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </BodyTemplate>

    <FooterTemplate>
        <HxButton Color="ThemeColor.Primary" CssClass="me-3" @onclick="SelectDatasetAsync"
                  Enabled="_selectedDataset is not null">
            Select
        </HxButton>
        <HxButton Color="ThemeColor.Secondary" Spinner="false" @onclick="async () => await _offcanvas.LetAsync(x => x.HideAsync())">
            Cancel
        </HxButton>
    </FooterTemplate>
</HxOffcanvas>

@code {
    [Parameter]
    public IEnumerable<FabricWorkspace>? FabricWorkspaces { get; set; }

    [Parameter]
    public EventCallback<Dataset> OnDatasetSelected { get; set; }

    [Parameter]
    public bool AllowWorkspaceChange { get; set; }

    private Guid _fabricWorkspaceId;
    private HxOffcanvas? _offcanvas;
    private IReadOnlyList<Dataset>? _datasets;
    private Dataset? _selectedDataset;
    private string _filterText = "";

    private async Task SelectDatasetAsync()
    {
        if (_selectedDataset is null)
        {
            return;
        }
        await OnDatasetSelected.InvokeAsync(_selectedDataset);
        await _offcanvas.LetAsync(x => x.HideAsync());
    }

    public async Task ShowAsync(Guid? fabricWorkspaceId = null)
    {
        _filterText = "";
        if (fabricWorkspaceId is { } id)
        {
            _fabricWorkspaceId = id;
        }
        else
        {
            _fabricWorkspaceId = FabricWorkspaces?.FirstOrDefault()?.FabricWorkspaceId ?? Guid.Empty;
        }

        if (_fabricWorkspaceId == Guid.Empty)
        {
            Toaster.AddWarning("No Fabric workspaces found");
            return;
        }

        await _offcanvas.LetAsync(x => x.ShowAsync());
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _datasets = null;
        _selectedDataset = null;
        try
        {
            await using var context = await DbContextFactory.CreateDbContextAsync();
            var fabricWorkspace = await context.FabricWorkspaces
                .AsNoTrackingWithIdentityResolution()
                .Include(x => x.AzureCredential)
                .FirstAsync(x => x.FabricWorkspaceId == _fabricWorkspaceId);
            var azureCredential = fabricWorkspace.AzureCredential;
            ArgumentNullException.ThrowIfNull(azureCredential);
            var client = ClientFactory.Create(azureCredential);
            _datasets = await client.GetDatasetsAsync(fabricWorkspace.WorkspaceId);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Toaster.AddError("Error reading datasets", ex.Message);
        }
    }
}
