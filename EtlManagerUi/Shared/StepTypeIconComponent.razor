@inject MarkupHelperService MarkupHelper

@switch (StepType_)
{
    case StepType.Sql:
        @MarkupHelper.FromFile("icons/feather/code.svg")
        break;
    case StepType.Package:
        @MarkupHelper.FromFile("icons/feather/package.svg")
        break;
    case StepType.Pipeline:
        @MarkupHelper.FromFile("icons/feather/pipeline.svg")
        break;
    case StepType.Job:
        @MarkupHelper.FromFile("icons/feather/loader.svg")
        break;
    case StepType.Exe:
        @MarkupHelper.FromFile("icons/feather/terminal.svg")
        break;
    case StepType.Dataset:
        @MarkupHelper.FromFile("icons/feather/bar-chart-2.svg")
        break;
    case StepType.Function:
        @MarkupHelper.FromFile("icons/feather/zap.svg")
        break;
    case StepType.AgentJob:
        @MarkupHelper.FromFile("icons/feather/server.svg")
        break;
    case StepType.Tabular:
        @MarkupHelper.FromFile("icons/feather/box.svg")
        break;
    default:
        @MarkupHelper.FromFile("icons/feather/x-circle.svg")
        break;
}

@code {
    [Parameter]
    public StepType? StepType_ { get; set; }
}
