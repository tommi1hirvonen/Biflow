<BSModal @ref="Modal" Size="Size.Large" IsScrollable="true">
    <BSModalHeader @onclick="() => Modal.Hide()">@StepExecutionAttempt?.StepExecution.StepName</BSModalHeader>
    <BSModalBody>
        <StepExecutionDetailsComponent StepExecutionAttempt="StepExecutionAttempt" ShowExtraDetails="true" />
    </BSModalBody>
    <BSModalFooter>
        <BSButton Color="Color.Secondary" @onclick="() => Modal.Hide()">Close</BSButton>
    </BSModalFooter>
</BSModal>

@code {
    [Parameter]
    public StepExecutionAttempt? StepExecutionAttempt { get; set; }

    private BSModal Modal { get; set; } = null!;

    public void Show() => Modal.Show();
}
