
﻿<HxModal @ref="Modal" Size="ModalSize.Large" Scrollable="true" Title="@StepExecutionAttempt?.StepExecution.StepName">
    <BodyTemplate>
        <StepExecutionDetailsComponent StepExecutionAttempt="StepExecutionAttempt" ShowExtraDetails="true" />
    </BodyTemplate>
    <FooterTemplate>
        <HxButton Color="ThemeColor.Secondary" @onclick="async () => await Modal.HideAsync()">Close</HxButton>
    </FooterTemplate>
</HxModal>

@code {
    [Parameter]
    public StepExecutionAttempt? StepExecutionAttempt { get; set; }

    private HxModal Modal { get; set; } = null!;

    public async Task ShowAsync() => await Modal.ShowAsync();
}
