@{
    switch (ExecutionStatus_)
    {
        case ExecutionStatus.Succeeded:
            <span class="badge badge-success">@ExecutionStatus_</span>
            break;
        case ExecutionStatus.Failed:
            <span class="badge badge-danger">@ExecutionStatus_</span>
            break;
        case ExecutionStatus.Warning:
        case ExecutionStatus.Stopped:
        case ExecutionStatus.Suspended:
            <span class="badge badge-warning">@ExecutionStatus_</span>
            break;
        case ExecutionStatus.Running:
            <span class="badge badge-primary">@ExecutionStatus_</span>
            break;
        default:
            <span class="badge badge-secondary">@ExecutionStatus_</span>
            break;
    }
}

@code {
    [Parameter]
    public ExecutionStatus? ExecutionStatus_ { get; set; }
}