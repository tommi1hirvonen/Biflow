@page "/about"

@using System.Reflection
@inject IConfiguration Configuration

<div class="row px-4">
    <dl>
        <dt>Environment</dt>
        <dd>@(Configuration.GetValue<string>("EnvironmentName"))</dd>
        <dt>Version</dt>
        <dd>v@(Assembly.GetExecutingAssembly().GetCustomAttribute<AssemblyInformationalVersionAttribute>()?.InformationalVersion)</dd>
        <dt>Commit SHA</dt>
        <dd>@EtlManagerUi.Properties.Resources.CurrentCommit</dd>
    </dl>
</div>
