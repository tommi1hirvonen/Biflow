@page
@model EtlManagerUi.Pages.LogInModel
@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment WebHostEnvironment

@{
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto pt-5">
            <section>

                <div class="card shadow">
                    <h5 class="card-header">Log in</h5>
                    <div class="card-body">

                        <form method="post" role="form" class="form-horizontal" onsubmit="disableLoginbutton()">
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <p />
                            <p />
                            <div class="form-group">
                                <div class="input-group">
                                    <label class="sr-only" asp-for="Login.Username"></label>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text rounded-left">
                                            @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/user.svg")))
                                        </div>
                                    </div>
                                    <input id="username" asp-for="Login.Username" class="form-control" placeholder="Username" />
                                </div>
                                @Html.ValidationMessageFor(m => m.Login.Username, "", new { @class = "text-danger" })
                            </div>
                            <p />
                            <div class="form-group">
                                <div class="input-group">
                                    <label class="sr-only" asp-for="Login.Password"></label>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text rounded-left">
                                            @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/key.svg")))
                                        </div>
                                    </div>
                                    <input type="password" asp-for="Login.Password" class="form-control" placeholder="Password" />
                                </div>
                                @Html.ValidationMessageFor(m => m.Login.Password, "", new { @class = "text-danger" })
                            </div>
                            <p />
                            <p />
                            <div class="form-group">
                                <button id="button_login" asp-page-handler="LogIn" class="btn btn-primary btn-block">
                                    @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/log-in.svg")))
                                    &nbsp;
                                    Log in
                                </button>
                            </div>
                        </form>

                    </div>
                </div>

            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () { focusUsername(); });

        function focusUsername() {
            $('#username').focus();
        }

        function disableLoginbutton() {
            $('#button_login').attr("disabled", "true");
            return true;
        }
    </script>
}