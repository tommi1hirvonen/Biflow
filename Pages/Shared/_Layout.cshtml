<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETL Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            @{
                String pageRoute = ViewContext.RouteData.Values["page"].ToString();
            }
            <div class="container">
                <a class="navbar-brand" style="font-weight: bold;" asp-area="" asp-page="/Index">ETL Manager</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*Only show the navigation links if the user is logged in*@
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(pageRoute == "/Account" ? "active font-weight-bold" : "")" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Account</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-page="/Account">Change password</a>
                                    <form method="post">
                                        <button class="dropdown-item" asp-page="/Index" asp-page-handler="LogOff">Log out</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link @(pageRoute == "/Index" ? "active font-weight-bold" : "")" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(pageRoute.Left(5) == "/Jobs" ? "active font-weight-bold" : "")" asp-page="/Jobs/Index">Jobs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(pageRoute.Left(10) == "/Schedules" ? "active font-weight-bold" : "")" asp-page="/Schedules/Index">Schedules</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle @(pageRoute.Left(11) == "/Executions" ? "active font-weight-bold" : "")" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Executions</a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-page="/Executions/Jobs">Jobs</a>
                                    <a class="dropdown-item" asp-page="/Executions/Steps">Steps</a>
                                </div>
                            </li>
                        </ul>

                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2020 - Tommi Hirvonen
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
