@page
@model ExecutorManager.Pages.Jobs.Steps.IndexModel 

@{
    ViewData["Title"] = "Job Steps";
}

<h1>@Model.Job.JobName Steps</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.Job.JobId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Steps[0].StepName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Steps[0].ExecutionPhase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Steps[0].StepType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Steps[0].IsDisabled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Steps) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StepName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExecutionPhase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StepType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDisabled)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.StepId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.StepId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.StepId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-page="../Index">Back to Jobs</a>
</div>