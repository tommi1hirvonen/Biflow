@page
@model EtlManager.Pages.Jobs.Steps.DependencyModel
@{
    ViewData["Title"] = "Job Dependencies";
}

<h2>@Model.JobName Dependencies</h2>

<p></p>

<table class="table">
    <thead>
        <tr>
            <th>
                Step
            </th>
            <th>
                Dependant On
            </th>
            <th>
                Strict Dependency *
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dependencies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Step.StepName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DependantOnStep.StepName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StrictDependency)
                </td>
            </tr>
        }
    </tbody>
</table>
<hr/>
<p class="text-secondary"><small>* Strict dependency means that the step will skipped if any one of the strict dependencies has failed or has been skipped.</small></p>

<div>
    <a asp-page="./Index" asp-route-id="@Model.JobId">Back to List</a>
</div>