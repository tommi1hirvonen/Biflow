@page
@model EtlManager.Pages.EmailModel
@using Microsoft.AspNetCore.Hosting
@inject IWebHostEnvironment WebHostEnvironment
@{
    ViewData["Title"] = "Account";
}

<h3>Account</h3>
<hr />
<div class="row">
    <div class="col-md-5">
        <h4>@Model.User_.Username</h4>

        <partial name="_AccountNavigationPartial" />

        <section class="mt-4">
            <form method="post" asp-page-handler="ChangeEmail" role="form" class="form-horizontal">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessage("MatchError", "", new { @class = "text-danger" })

                <div class="form-group">
                    <input hidden asp-for="User_.Username" value="@Model.User_.Username" />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/at-sign.svg")))
                            </div>
                        </div>
                        <input asp-for="User_.Email" value="@Model.User_.Email" class="form-control" placeholder="Email" />
                    </div>
                    <span asp-validation-for="User_.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">
                        @Html.Raw(System.IO.File.ReadAllText(System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "icons/feather/save.svg")))
                        Save email
                    </button>
                </div>
            </form>
            @if (Model.Success)
            {
                <div class="alert alert-success" role="alert">Email updated successfully!</div>
            }
        </section>


    </div>
</div> 