@page
@model EtlManager.Pages.EmailModel
@{
    ViewData["Title"] = "Account";
}

<h3>Account</h3>
<hr />
<div class="row">
    <div class="col-md-5">
        <h4>@Model.User_.Username</h4>

        <ul class="nav nav-tabs mt-3" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" asp-page="./Email">Email</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" asp-page="./Password">Password</a>
            </li>
        </ul>

        <section class="mt-4">
            <form method="post" asp-page-handler="ChangeEmail" role="form" class="form-horizontal">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.ValidationMessage("MatchError", "", new { @class = "text-danger" })

                <div class="form-group">
                    <input hidden asp-for="User_.Username" value="@Model.User_.Username" />
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@@</div>
                        </div>
                        <input asp-for="User_.Email" value="@Model.User_.Email" class="form-control" placeholder="Email" />
                    </div>
                    <span asp-validation-for="User_.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Update">
                </div>
            </form>
            @if (Model.Success)
            {
                <div class="alert alert-success" role="alert">Email updated successfully!</div>
            }
        </section>


    </div>
</div> 